-var imgPrecioAlza = "https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/trending-up.svg"
-var imgLogo = "https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/papaLogo.svg"
-var imgArrowButton = "https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/flecha%20derecha%20boton.svg"
mixin card 
    .planes__card--general
        p.planes__card--general--recomendado Recomendado 
        p.planes__card--general--pago Pago Anual
        .planes__card--general--precio 
            p.planes__card--general--precio--pesos $
            p.planes__card--general--precio--valor 99
        p.planes__card--general--text *Ahorras $129 comparado al plan mensual.
        .planes__card--general--boton 
            p.planes__card--general--boton--text Escoger este
            img(src= imgArrowButton, alt="icono de flecha del boton escoger plan")
doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./css/style.css")
        link(rel="stylesheet", href="./css/style_375px.css")
        link(rel="stylesheet", href="./css/style_425px.css")
        link(rel="stylesheet", href="https://fonts.gstatic.com")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Inter:wght@500;700&display=swap")
        title Document
        link(rel="shortcut icon", href="https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/papa.svg")
    body
        header 
            section.header
                .container
                    img(src= imgLogo, alt="logo de batabit")
                    h1 La próxima revolución en el intercambio de criptomonedas.
                    p Batatabit te ayuda a navegar entre los diferentes precios y tendencias.  
                    .container__button 
                        a(href="#") Conoce Nuestros Planes
                        img(src="https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/flechaAbajo.svg", alt="icono de flecha hacia abajo")
        main 
            section.firstSection 
                .binarios 
                    img(src="https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/Bitcoin.svg", alt="imagen principal de la seccion bitcoin")
                    h1 Visibilizamos todas las tasas de cambio.
                    p Traemos información en tiempo real de las casas de cambio y las monedas más importantes del mundo. 
                    .binarios__container 
                        .binarios__container--money: h1 Monedas
                            .binarios__container--money--monedas 
                                p Bitcoin 
                                p $1.96
                                img(src=imgPrecioAlza, alt="imagen de precio a la alza")
                                p Ethereum
                                p $0.07
                                img(src=imgPrecioAlza, alt="imagen de precio a la alza")
                                p Ripple 
                                p $2.15
                                img(src=imgPrecioAlza, alt="imagen de precio a la alza")
                                p Stellar 
                                p $4.96
                                img(src=imgPrecioAlza, alt="imagen de precio a la alza")
                            .binarios__container--date
                                h1 Actualizado:
                                p Julio 23:48
                        .binarios__container--comisiones: h1 Comisiones 
                            .binarios__container--comisiones--comisiones
                                p Bitrade 
                                p $12.96
                                img(src=imgPrecioAlza, alt="imagen de precio a la alza")
                                p Bitpreco 
                                p $13.07
                                img(src=imgPrecioAlza, alt="imagen de precio a la alza")
                                p Novadax 
                                p $13.15
                                img(src=imgPrecioAlza, alt="imagen de precio a la alza")
                                p Coinext 
                                p $14.96
                                img(src=imgPrecioAlza, alt="imagen de precio a la alza")
                            .binarios__container--date
                                h1 Actualizado: 
                                p 19 Julio 23:48
            section.secondSection 
                .servicios 
                    h1 Creamos un producto sin comparación.
                    p Confiable y diseñado para su uso diario.
                    .servicios__card 
                        .servicios__card--tiempo    
                            img(src="https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/clock%201.svg", alt="icono de reloj")
                            h2 Tiempo real 
                            p Nuestro API toma información minuto a minuto sobre las tasas que más determinan el comportamiento.
                        .servicios__card--vista 
                            img(src="https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/eye%201.svg", alt="icono de vista")
                            h2 No hay tasas escondidas
                            p Ni en la compra o al momento de exit, Batabit siempre te muestra el costo real de lo que estás adquiriendo.
                        .servicios__card--dinero 
                            img(src="https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/dollar-sign%201.svg", alt="icono de dinero")
                            h2 Compara monedas
                            p No más rumores, con Babtabit sabrás el valor real de cada moneda en el mercado actual.
                        .servicios__card--info
                            img(src="https://raw.githubusercontent.com/davidfcc7/imagenesRepositorio/2336f0998f3894d3a71f74cccce7b5aac606d6bd/check-circle%201.svg", alt="icono de check")
                            h2 Información confiable
                            p Nuestras fuentes están 100% verificadas y continuamos auditando su contenido mientras se actualizan.
            section 
                .imagen: h1 Conócelo hoy.
            section.thirdSection
                .planes 
                    h1 Escoge el plan que mejor se ajuste a ti.
                    h2 Cualquier plan te da acceso completo a nuestra plataforma.
                    section.planes__card 
                        +card 
                        +card 
                        +card 
    footer 
        section 
            .footer: img(src= imgLogo , alt="imagen logo batabit")                            

                           























